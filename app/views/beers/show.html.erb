<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery %>
</p>

<% if @beer.ratings.empty? %>
  <%= "Beer has not yet been rated" %>
<% else %>
  <%= 'Has ' + pluralize(@beer.ratings.size, 'rating') + ', average ' + @beer.average_rating.to_s %>
<% end %>

<br>

<% if current_user %>
  <%= link_to 'Edit', edit_beer_path(@beer) %> |
<% end %>
<%= link_to 'Back', beers_path %>
