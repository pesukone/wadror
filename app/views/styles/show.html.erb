<p id="notice"><%= notice %></p>

<h2><%= @style.style %></h2>
<br>

<%= @style.description %>
<br>

<strong>Beers</strong>
<ul>
    <% @style.beers.each do |beer| %>
        <li>
            <%= link_to beer.name, beer %>
	    by
	    <%= link_to beer.brewery.name, beer.brewery %>
	    <br>
	</li>
    <% end %>
</ul>

<%= link_to 'Edit', edit_style_path(@style) %>
<%= link_to 'Destroy', @style, method: :delete, data: { confirm: 'Are you sure?' } %>
