<p id="notice"><%= notice %></p>

<h2><%= @user.username %></h2>

<p>
	<%= 'has made ' + pluralize(@user.ratings.size, 'rating') + ', average ' + @user.average_rating.to_s %>
</p>

<p>
	member of 
	<% @user.beer_clubs.each do |club| %>
		<%= link_to club.name, club %>
	<% end %>
</p>

<p>
	favorite beer: 
	<% if @user.favorite_beer %>
		<%= link_to @user.favorite_beer, @user.favorite_beer %>
	<% end %>
	<br>

	favorite style:
	<% if @user.favorite_style %>
		<%= @user.favorite_style %>
	<% end %>
	<br>

	favorite brewery:
	<% if @user.favorite_brewery %>
		<%= link_to @user.favorite_brewery, @user.favorite_brewery %>
	<% end %>
</p>

<h3>ratings</h3>

<ul>
	<% @user.ratings.each do |rating| %>
		<li>
			<%= rating %>
			<% if @user == current_user %>
				<%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
			<% end %>
		</li>
	<% end %>
</ul>

<% if @user == current_user %>
	<%= link_to 'Edit', edit_user_path(@user) %> 
	<%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
